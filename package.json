{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Implementação do https://www.tabnews.com.br/ para estudar programação.",
  "main": "index.js",
  "scripts": {
    "dev": "npm run docker:Up && next dev",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "docker:Up": "docker compose -f infra/compose.yaml up -d --force-recreate",
    "docker:Stop": "docker compose -f infra/compose.yaml stop",
    "docker:Down": "docker compose -f infra/compose.yaml down",
    "migration:create": "node-pg-migrate -m infra/migrations create",
    "migration:up": "node-pg-migrate -m infra/migrations --envPath .env.development up"
  },
  "author": "Alexandre",
  "license": "MIT",
  "dependencies": {
    "curl": "^0.1.4",
    "dotenv": "^16.4.4",
    "next": "^13.1.6",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "jest": "^29.6.2",
    "prettier": "^2.8.8"
  }
}
